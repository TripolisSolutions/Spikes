

<div class="hero-unit">
  <h1>My facebook profile</h1>
  <p>
    <br/>
    <div style="float:left;margin-top:10px;margin-right:10px"><img src="http://graph.facebook.com/<%=  @profile['username'] %>/picture" /></div>
    Name: <%=  @profile['name'] %> <br />
    Place: <%= @profile['hometown']['name'] %>  <br /></p>
</div>
<% if notice %>
<div class="alert alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <p><%= notice %></p></div>
<% end %>
<div class="page-header">
<h2>My Page <%= @my_page['name'] %></h2>
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @my_page_posts.each do |post_msg| %>
      <tr>
        <td><%= post_msg['message'] %></td>
        <td></td>
        <td></td>
        <td><%= link_to 'Destroy', "facebook_messages/"+post_msg['id'], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
<br/>
<%= link_to 'New message', new_facebook_message_path ,:class => "btn"%>
 </div>
<div class="page-header">
<h2>My Personal messages</h2>
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @facebook_messages.each do |facebook_message| %>
  <tr>
    <td><%= facebook_message['story'] %></td>
    <td><%= link_to "Show", :controller => "facebook_messages", :action => "show", :id => facebook_message['id'] %></td>
    <td></td>
    <td></td>
  </tr>
<% end %>
</table>
</div>
<div class="page-header">
<h2>My Friends <small>(ow wow i have friends....)</small></h2>
<% @friends.each_with_index do |friend,i| %>
    <div style="width:200px;overflow: hidden;float:left">
      <div style="margin-top:10px;margin-right:10px"><img src="<%= friend['picture']['data']['url'] %>/picture" /></div><%= friend['name'] %>
    </div>
    <% if i % 3 == 0 %>
        <div  style="clear:both;"></div>
    <% end %>
<% end %>
    </div>

