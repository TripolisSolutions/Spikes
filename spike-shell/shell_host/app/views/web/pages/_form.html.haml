= simple_form_for([:web, @page], html: {class: 'form-horizontal'}) do |f|
  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  = f.input :name
  = f.input :title
  = f.input :content, as: :text, input_html: { rows: '10', style: 'width: 400px'}

  = f.submit 'Save', class: 'btn btn-primary'
