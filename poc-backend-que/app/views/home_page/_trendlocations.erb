<div>
  <%= form_for(@place) do |f| %>
  <fieldset>
    <legend>Trending locations</legend>
    <div class="input-append">
    <select id="location" name="location">
    <% @trend_locations.each do |location| %>
      <option value="<%= location.woeid %>"><%=  location.name %></option>
    <% end %>
    </select>
    <%= f.submit "Monitor", class: "btn btn-primary" %>
    </div>
  </fieldset>
  <% end %>
</div>