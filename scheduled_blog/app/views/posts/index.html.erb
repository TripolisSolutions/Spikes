<h1><%= t ".title" %></h1>

<div>Language:
<%= link_to_unless_current "English", locale: "en" %> |
<%= link_to_unless_current "Nederlands", locale: "nl" %>
</div>

<table>
  <tr>
    <th><%= Post.human_attribute_name(:name) %></th>
    <th><%= Post.human_attribute_name(:title) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>

  <tr>
    <td colspan='5'><strong>Scheduled posts</strong></td>
  </tr>


  <% @scheduled_posts.each do |post| %>
      <tr>

        <td><%= post.name %></td>
        <td colspan='2'><%= post.scheduled_job.t %></td>

        <td><%= link_to 'Unschedule', '/posts/unschedule/' + post.id.to_s, confirm: 'Are you sure?' %></td>
        <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>


  <tr>
    <td colspan='5'><strong>Invisible Unscheduled posts</strong></td>
  </tr>

  <% @invisible_posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy',  post, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
  <% end %>

</table>

<br />

<%= link_to 'New Post', new_post_path %>
