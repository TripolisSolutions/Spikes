= form_for @user_follower do |f|
  - if @user_follower.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_follower.errors.count, "error")} prohibited this user_follower from being saved:"
      %ul
        - @user_follower.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :screen_name
    = f.text_field :screen_name
  .field
    = f.label :last_loaded
    = f.number_field :last_loaded
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :last_updated
    = f.datetime_select :last_updated
  .actions
    = f.submit 'Save'
