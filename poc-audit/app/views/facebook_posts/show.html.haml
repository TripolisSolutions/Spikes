- model_class = FacebookPost
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:account_id) + ':'
  %br
  = @facebook_post.account_id
%p
  %strong= model_class.human_attribute_name(:label) + ':'
  %br
  = @facebook_post.label
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @facebook_post.status
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @facebook_post.type
%p
  %strong= model_class.human_attribute_name(:post) + ':'
  %br
  = @facebook_post.post
%p
  %strong= model_class.human_attribute_name(:post_at) + ':'
  %br
  = @facebook_post.post_at

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), facebook_posts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_facebook_post_path(@facebook_post), :class => 'btn'
  = link_to t('.audit', :default => t("helpers.links.audit")), audit_facebook_post_path(@facebook_post), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), facebook_post_path(@facebook_post), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
