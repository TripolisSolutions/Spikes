- model_class = FacebookPost
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:account_id)
      %th= model_class.human_attribute_name(:status)
      %th= model_class.human_attribute_name(:type)
      %th= model_class.human_attribute_name(:post_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @facebook_posts.each do |facebook_post|
      %tr
        %td= link_to facebook_post.id, facebook_post_path(facebook_post)
        %td= facebook_post.account_id
        %td= facebook_post.status
        %td= facebook_post.type
        %td= facebook_post.post_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), |
            edit_facebook_post_path(facebook_post), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), |
            facebook_post_path(facebook_post), method: :delete, |
            data: { confirm: t('.confirm', default: |
            t("helpers.links.confirm", default: 'Are you sure?')) }, |
            class: 'btn btn-mini btn-danger'

= link_to t('.new', default: t("helpers.links.new")), new_facebook_post_path, class: 'btn btn-primary'
