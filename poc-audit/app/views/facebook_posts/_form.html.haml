= form_for @facebook_post, html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :account_id, class: 'control-label'
    .controls
      = f.number_field :account_id, class: 'number_field'
  .control-group
    = f.label :label, class: 'control-label'
    .controls
      = f.text_field :label, class: 'text_field'
  %ul.nav.nav-tabs
    %li
      %a{href: "#post", data: {toggle: "tab"}} Post
    %li
      %a{href: "#milestone", data: {toggle: "tab"}} Milestone
    %li
      %a{href: "#question", data: {toggle: "tab"}} Question
  .tab-content
    .tab-pane.active#post
      = render partial: "form_message", locals: {f: f}
    .tab-pane#milestone
      = render partial: "form_event", locals: {f: f}
    .tab-pane#question
      = render partial: "form_question", locals: {f: f}
  .control-group
    = f.label :post_at, class: 'control-label'
    .controls
      = f.text_field :post_at, class: 'datetimepicker text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), facebook_posts_path, class: 'btn'
